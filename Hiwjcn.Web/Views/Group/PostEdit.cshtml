@using Lib.core;
@using Lib.helper;
@using Lib.http;
@using Bll;
@using Model;
@using Model.Post;
@using Model.Category;
@using Hiwjcn.Web.Models.Group;
@{
    Layout = null;

    var model = ViewData["model"] as PostEditViewModel;
    if (model == null) { model = new PostEditViewModel(); }
    if (model.Post == null) { model.Post = new PostModel(); }

    if (model.Post.PostTagsList == null) { model.Post.PostTagsList = new List<string>(); }
    ViewData["tags"] = JsonHelper.ObjectToJson(model.Post.PostTagsList);
}
<!DOCTYPE html>
<html>
<head>
    @Html.Partial(IncludePath("header"))
    <style type="text/css">
        .lb {
            font-size: 16px;
            font-weight: bold;
            line-height: 40px;
        }

        .ipt_row {
            margin: 20px 0;
        }
    </style>
</head>
<body>
    @Html.Partial(IncludePath("body_top"))

    <div class="container" style="margin-top: 20px;">
        <div class="row">
            <div class="col-md-12" style="margin-bottom: 20px;">
                <form id="post_form" method="post">
                    <div class="box">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="pull-left">
                                    @if (model.Post.PostID > 0 && model.Post.AuthorID == model.LoginUserID)
                                    {
                                        <button class="btn btn-primary btn-x del" type="button">删除</button>
                                        <script type="text/javascript">
                                            $(function () {
                                                $('.del').click(function () {
                                                    if (!confirm('确认删除？')) { return false; }
                                                    var id = $("input[name='post_id']").val();
                                                    postJson('/group/DeletePostAction/', { post_id: id }, function (res) {
                                                        if (res && res.success) {
                                                            alert('删除成功');
                                                            if (parent) {
                                                                parent.location.href = '/group/postlist/?update=1';
                                                            }
                                                            else {
                                                                window.location.reload();
                                                            }
                                                        }
                                                        else {
                                                            alert(res.msg);
                                                        }
                                                    });
                                                    return false;
                                                });
                                            });
                                        </script>
                                    }
                                </div>
                                <div class="pull-right">
                                    <button class="btn btn-primary" type="button" id="post_btn">保存</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box">
                        <div class="ipt_row">
                            <div class="lb">标题</div>
                            <input type="text" class="form-control" name="post_title" value="@(model.Post.Title)" />
                            @Html.CSRFTokenField("SavePostAction")
                        </div>

                        <div class="ipt_row">
                            <div class="lb">标签</div>
                            @Html.Partial(IncludePath("tag_input"))
                        </div>
                    </div>
                    <div class="box">
                        <input type="hidden" name="post_id" value="@(model.Post.PostID)" />
                        <input type="hidden" name="post_preview" />
                        <input type="hidden" name="post_content" />
                        <input type="hidden" name="post_image" />
                        <input type="hidden" name="post_tags" />
                        @{
                            ViewData["edit_html"] = model.Post.Content;
                        }
                        @Html.Partial(IncludePath("html_editor"))
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div id="hidden_html" style="display: none;"></div>
    <script type="text/javascript">
        $(function () {
            var form = $('#post_form');
            form.submit(function () { return false; });
            $('#post_btn').click(function () {

                $("input[name='post_tags']").val(GetSelectedTags());
                $("input[name='post_preview']").val(getContentTxt());
                $("input[name='post_content']").val(getContent());

                var data = form.serializeArray();

                postJson('/group/savepostaction/', data, function (res) {
                    if (res && res.success) {
                        if (parent) {
                            parent.location.href = '/group/postlist/?update=1';
                        }
                        else {
                            alert('保存成功');
                            window.location.reload();
                        }
                    }
                    else {
                        alert(res.msg);
                    }
                });
                return false;
            });
        });
    </script>
</body>
</html>
