@using Lib.core;
@using Lib.helper;

@using Lib.io;
@using Lib.model;
@using Bll;
@using Model;
@using Model.Sys;
@{
    Layout = null;
}

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
          "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <!-- header page -->
    @Html.Partial(IncludePath("header"))
</head>

<body>
    <script type="text/javascript">
        var url = '@(ViewData["img_url"])';
        if (url.length <= 0) {
            alert('上传失败，请确保上传的是图片文件');
        }
        else {
            if (window.parent && window.parent.set_image) {
                window.parent.set_image(url);
            }
            else {
                alert('图片上传成功，但是无法调用父窗口');
            }
        }
        var info = '@(ViewData["info"])';
        if (info.length > 0) {
            alert(info);
        }
    </script>
</body>
</html>
